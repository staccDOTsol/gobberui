{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "types": ["jest", "mocha", "chai"],
    "typeRoots": ["./node_modules/@types"],
    "module": "commonjs",
    // "target": "es6",
    "target": "ES2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "skipLibCheck": true
  }
}
